{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Google Translate",
    "description": "Quick translate without open a new google translate tab made by Meabu",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://*//*",
        "https://*//*"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    },
    "icons": {
        "32": "icon32.png",
        "64": "icon32.png",
        "128": "icon32.png"
    }
}